<?xml version="1.0" encoding="UTF-8"?>
<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
  <map:pipelines>
    <map:pipeline>
      <!-- Custom profile routing -->
      <map:match pattern="profiles/*">
        <map:read src="data/profile-{1}.json"/>
      </map:match>
      
      <!-- Team pages routing -->
      <map:match pattern="teams/*/members">
        <map:read src="data/team-{1}-members.json"/>
      </map:match>
    </map:pipeline>
  </map:pipelines>
</map:sitemap>